

{% block body %}
   <p>Vous avez {{ notifications|length }} notifications</p>

   {%  for notif in notifications %}

   <div class="notifi__item">
      <div class="bg-c1 img-cir img-40">
         <i class="zmdi zmdi-email-open"></i>
      </div>
      <div class="content">
         <p>{{ notif.title }}</p>

         <a href="{{ path('centre_index') }}">Vu {{ notif.description }} fois </a>

      </div>
   </div>
   {% else %}
      <p>Vous n'avez pas de notifications</p>
   {% endfor %}

   <div class="notifi__footer">
      <a href="#">Voir statistiques</a>

   </div>
</div>
{% endblock %}
