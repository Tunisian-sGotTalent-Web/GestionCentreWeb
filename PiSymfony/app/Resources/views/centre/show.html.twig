{% extends 'base.html.twig' %}

{% block body %}

    <table>
        <tbody>
        <tr>

            <td><img src="{{ asset('uploads/images/' ~ centre.imageCentre) }}" height="500px" width="600px"></td>

        </tr>
        <div class="au-card au-card--no-shadow au-card--no-pad m-b-40">
            <div class="au-card-title" >
                <div class="bg-overlay bg-flat-color-3"></div>
                <h3>
                    <i class="zmdi zmdi"></i>Le centre : {{ centre.nomCentre }}</h3>

            </div>
         <tr>

                <th>Nom du centre :</th>
                <td>{{ centre.nomCentre }}</td>
            </tr>
            <tr>
                <th>Adresse du centre :</th>
                <td>{{ centre.adresseCentre }}</td>
            </tr>
            <tr>
                <th>Domaine du centre :</th>
                <td>{{ centre.dasCentre }}</td>
            </tr>
            <tr>
                <th>Email du centre :</th>
                <td>{{ centre.mailCentre }}</td>
            </tr>
            <tr>
                <th>Telephone du centre :</th>
                <td>{{ centre.telephoneCentre }}</td>
            </tr>

            <tr>
                <th>Nombre de vu du centre :</th>
                <td>{{ centre.vuCentre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('centre_index') }}">Retour Ã  la liste</a>
        </li>
        <li>
            <a href="{{ path('centre_edit', { 'id': centre.id }) }}">Edit</a>
        </li>
        <li>

            {{ form_start(delete_form) }}


            <a href="{{ path('centre_delete', { 'id': centre.id }) }}">Supprimer</a>
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
